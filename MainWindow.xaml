            <TextBox x:Name="TextBox_X_1_left" Grid.Row="1" Height="22" FontSize="16" MaxLength="10"
                      BorderBrush="Gray" Background="#FFE0D8D8"/>
        </Grid>
        <!--///////////////////////////////// left  /////////////////////////////////////////////////////////-->
        <Grid Grid.Row="15" Grid.Column="3" Margin="5,0">
