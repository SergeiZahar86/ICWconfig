                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label x:Name="Label_Y_0_left" Grid.Row="0" Height="19" 
                   BorderBrush="Gray" Background="#FFE0D8D8"/>
            <TextBox x:Name="TextBox_Y_0_left" Grid.Row="1" Height="22" FontSize="16" MaxLength="10"
